.picker{
  width: 100%;
  height: 500rpx;
  border: 4rpx solid red;
  background: white;
  color: black;
  text-align: center;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 999;
}

 .picker .btns{
  width: 100%;
  display: flex;
  justify-content: space-between;
  line-height: 50rpx;
  height: 50rpx;
  padding: 5rpx 2rpx;
} 

.picker  picker-view{
  width: 80%;
  height: 300rpx;
  /* border: 5rpx solid red; */
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-content: center;
} 

.picker picker-view picker-view-column{
   margin: 0 20rpx; 
 width: 200rpx!important;

