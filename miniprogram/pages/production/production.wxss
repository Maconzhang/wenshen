/* pages/production/production.wxss */

.page-title{
  width: 100%;
  height: 45rpx;
  padding: 40rpx 28rpx;
  background: rgba(255,0,0,0.75);
}

.page-title text{
  display: block;
  width: 100%;
  margin: 3rpx 0;
}

.pro-list{
  width: 100%;
  height: 200rpx;
  padding:20rpx;
  display: flex;
  background: rgb(35,35,35);
  color: white;
}

.pro-list .item-img{
  display: flex;
  width:40%;
  height: 100%;
  border-bottom: 3rpx solid gray;  
}
.pro-list .item-img image{
  width: 100%;
  height: 170rpx;
}

.pro-list .item-des{
  display: flex;
  width:60%;
  height: 100%;
  border-bottom: 3rpx solid gray;
}

 .pro-list .item-des .word{
   display: inline-block;
   width: 80%; 
   padding: 20rpx;
} 
.pro-list .item-des .word .word-des{
  padding-right:40rpx;
  display:block;
  font-size:22rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:3;
  color:gray;
}

.pro-list .item-des .ico{
   display: inline-block;
   width: 20%; 
   padding: 40rpx 0;
} 

