.order{
  width: 500rpx;
  height: 750rpx;
  margin: 250rpx auto;
  border: 1px solid black;
  background: black;
  color: white;
}
.order .order-title{
  height: 100rpx;
  display: flex;
  width: 100%;
  margin: 100rpx 0 0 0;
  font-size: 34rpx;
  font-weight: 700;
  justify-content: center;
  align-content: center;
}

.order .order-content{
  width: 100%;
  color: gray;
}

.order .order-content .section{
  display: inline-block;
  width: 350rpx;
  margin: 0 50rpx;
  padding: 15rpx;
  border-bottom: 3rpx solid white;
  position: relative;
}

.order .order-content .section input{
  display: inline-block;
  position: absolute;
  top: 30rpx;
  left: 60rpx;
}

.order .order-content .style{
  display: inline-block;
  width: 100%;
  height: 50rpx;
  padding: 40rpx 20rpx 0  20rpx;
  box-sizing: border-box;
  /* margin: 10%; */
}

.order .order-content .style .style-item{
  width: 30%;
  border: 4rpx solid white;
  height: 50rpx; 
  display: inline-block;
  margin: 0 9%; 
  border-radius: 10rpx; 
  text-align: center;
  line-height: 50rpx;
  
}

.order .btn-Sub{
  width: 75%;
  margin: 50rpx auto;
  background: red;
  color: white;
  line-height: 55rpx;
  height: 55rpx;
  text-align: center;
}

